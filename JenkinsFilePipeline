pipeline{
    agent {
        docker {
            image 'node:18.17.1-alpine3.18'
        }
    }

    environment {
         FIREBASE_DEPLOY_TOKEN = credentials('firebase-token')
    }

    stages{
        stage('Building'){
            steps{
              sh 'npm install -g firebase-tools'
            }
        } 

         stage('Testing'){
            steps{
              echo 'This is testing'
            }
        }

        stage('Staging'){
            steps{
              sh 'firebase deploy -P staging-replica-c483e --token "$FIREBASE_DEPLOY_TOKEN"'
            }
        }

        stage('Production'){
            steps{
              sh 'firebase deploy -P production-replica-4daa6 --token "$FIREBASE_DEPLOY_TOKEN"'
            }
        }
    }
}

